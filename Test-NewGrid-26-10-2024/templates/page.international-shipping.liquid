<script>
    $(document).ready(function () {
        const submitFormWWOBtn = $("#submitFormWWOBtn");
				const modalThankyou = $("#modal-thankyou");
				const loader = $(".loader");
        const url = "https://asia-southeast1-write-sheet-dd941.cloudfunctions.net/api/lider/orders"
      
        const form_wworder = $("#form-wworder")
        const writeSheet = (url, data) => {
            return new Promise((resolve, reject) => {
                fetch(url, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(data)
                })
                    .then(response => resolve(response))
                    .catch(error => {
                        reject(error)
                    });
            })
        }
        form_wworder.submit(function (e) {
            e.preventDefault();
						loader.show();
						submitFormWWOBtn.prop('disabled',true); 
						submitFormWWOBtn.val('disabled'); 
            const data = form_wworder.serializeArray().reduce(function (obj, item) {
                obj[item.name] = item.value;
                return obj;
            }, {});
					console.log(data)
					
					 form_wworder.each(function(){
                this.reset();
            });

            writeSheet(url, data)
                .then(response => {
                    if (response.status === 200) {
											modalThankyou.modal('show');
											loader.hide();
											setTimeout(()=>{
												submitFormWWOBtn.prop('disabled',false);
												modalThankyou.modal('hide');
												window.location.href = "https://www.lider.vn/"
											},3000)
                    }
                })
                .catch(error => console.log("Error:", error));
        });

    });
</script>