	{% if search.performed %}
	{% paginate search.results by settings.pagination_limit %}

	{% if search.terms == "" %}
	<div class="content-page" id="search">
		<div class="col-md-6 expanded-message">
			<div class="search-field">
				<form action="/search" class="">
					<div class="input-group">
						<input name="q" style="width: 100%;margin-top:25px;height: 30px; margin-left: 17px;margin-bottom: 10px;border: none;
																	 border-bottom: 1px solid #d6d1d1;outline: none;" class="inputseach" type="text" class="form-control" placeholder="Nhập nội dung tìm kiếm">
						<span class="input-group-btn">
							<button style="height:35px;border: none;
														 background: none;
														 outline: none;" class="btn btn-default" type="submit"><img style="width:35px" src="{{'menuss.png'| asset_url}}" alt=""></button>
						</span>
					</div>
				</form>
			</div>
		</div> 
	</div>
	{% else %}

