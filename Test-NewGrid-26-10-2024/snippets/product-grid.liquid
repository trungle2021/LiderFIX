<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Grid Layout</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet"> -->
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,400;0,500;0,600;0,700;1,300&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>

<body>

    <div class="product-grid">
        <!-- Sale Item Example -->
        <div class="product-item sale">
            <div class="image-container">
                <img src="1_ext.jpg" alt="Beige Windbreaker" class="image1">
                <img src="7_ext.jpg" alt="Alternative View" class="image2">
                <span class="sale-badge">Sale</span>
            </div>
            <div class="product-info">
                <div class="left-info">
                    <div class="color-options">
                        <span class="color beige"></span>
                        <span class="color blue"></span>
                        <span class="color black"></span>
                    </div>
                    <span class="product-name">ART DEPARTMENT TEE - BLACK</span>
                </div>
                <div class="right-info">
                    <span class="product-price original">1,580,000đ</span>
                    <span class="product-price sale">1,280,000đ</span>
                </div>
            </div>
        </div>

        <!-- Sold out Item Example -->
        <div class="product-item out-of-stock">
            <div class="image-container">
                <img src="7_ext.jpg" alt="Beige Windbreaker" class="image1">
                <img src="6_ext.jpg" alt="Alternative View" class="image2">
                <div class="out-of-stock-overlay">
                    <span class="out-of-stock-badge">Sold out</span>
                </div>
            </div>
            <div class="product-info">
                <div class="left-info">
                    <div class="color-options">
                        <span class="color beige"></span>
                        <span class="color blue"></span>
                        <span class="color black"></span>
                    </div>
                    <span class="product-name">Red Jacket</span>
                </div>
                <div class="right-info">
                    <span class="product-price">1,280,000đ</span>
                </div>
            </div>
        </div>

        
    </div>

</body>

</html>

{% comment %} <div class="product-grid">
  {% paginate collection.products by settings.pagination_limit %}
    {% for product in collection.products %}
      {% assign current_variant = product.selected_or_first_available_variant %}
      <div class="product-item {% if product.available == false %}out-of-stock{% endif %} {% if current_variant.compare_at_price > current_variant.price %}sale{% endif %}">
        <div class="image-container">
          {% if product.featured_image != blank %}
            <picture>
              <source media="(min-width: 768px)" srcset="{{ product.featured_image | img_url: '500x' }}">
              <source media="(min-width: 360px)" srcset="{{ product.featured_image | img_url: '360x' }}">
              <img src="{{ product.featured_image | img_url: '250x' }}" alt="{{ product.featured_image.alt | escape }}" class="image1">
            </picture>
          {% endif %}
          {% if product.images[1] != blank %}
            <picture>
              <source media="(min-width: 768px)" srcset="{{ product.images[1] | img_url: '500x' }}">
              <source media="(min-width: 360px)" srcset="{{ product.images[1] | img_url: '360x' }}">
              <img src="{{ product.images[1] | img_url: '250x' }}" alt="{{ product.images[1].alt | escape }}" class="image2">
            </picture>
          {% endif %}
          {% if current_variant.compare_at_price > current_variant.price %}
            <span class="sale-badge">Sale</span>
          {% endif %}
          {% if product.available == false %}
            <div class="out-of-stock-overlay">
              <span class="out-of-stock-badge">Sold out</span>
            </div>
          {% endif %}
        </div>
        <div class="product-info">
          <div class="left-info">
            <div class="color-options">
              {% include 'color-container' %}
            </div>
            <span class="product-name">{{ product.title }}</span>
          </div>
          <div class="right-info">
            {% if current_variant.compare_at_price > current_variant.price %}
              <span class="product-price original">{{ current_variant.compare_at_price | money }}</span>
              <span class="product-price sale">{{ current_variant.price | money }}</span>
            {% else %}
              <span class="product-price">{{ current_variant.price | money }}</span>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  {% endpaginate %}
</div>

{% include 'pagination-default' %} {% endcomment %}